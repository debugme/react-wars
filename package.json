{
  "name": "react-wars",
  "version": "1.0.0",
  "description": "A simple web application providing CRUD features",
  "keywords": [
    "React", "Redux", "Sass", "Express", "Node", "MongoDB", "Mongoose", "Webpack", "Jest"
  ],
  "main": "server.js",
  "engines": {
    "node": "7.8.0"
  },
  "scripts": {
    "clean": "rm -rf node_modules/ coverage/ build/",
    "build": "webpack",
    "test": "jest --runInBand --coverage",
    "start": "forever build/server/server.js",
    "lint": "eslint source tests",
    "deploy": "now && now alias"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/debugme/react-wars.git"
  },
  "author": "Asad Razvi <debugme@hotmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/debugme/react-wars/issues"
  },
  "dependencies": {
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "body-parser": "^1.17.1",
    "dotenv": "^4.0.0",
    "express": "^4.15.2",
    "mongoose": "^4.9.4",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.4",
    "redux": "^3.6.0",
    "redux-promise": "^0.5.3",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-jest": "^19.0.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-http": "^3.0.0",
    "css-loader": "^0.28.0",
    "eslint": "^3.19.0",
    "eslint-plugin-react": "^6.10.3",
    "eslint-plugin-standard": "^3.0.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "forever": "0.15.3",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^19.0.2",
    "lodash": "^4.17.4",
    "node-sass": "^4.5.2",
    "sass-loader": "^6.0.3",
    "url-loader": "^0.5.8",
    "webpack": "^2.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "source/database/*.js",
      "source/server/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "now": {
    "name": "react-wars",
    "alias": "react-wars"
  },
  "babel": {
    "presets": [
      "es2015",
      "es2016",
      "es2017",
      "stage-0",
      "react"
    ]
  }
}
